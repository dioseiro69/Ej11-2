<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.android.alejandro.ej11_2.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rojo"
            android:id="@+id/textViewRed"
            android:layout_marginStart="108dp"
            android:layout_marginTop="56dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#ff0000"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="108dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naranja"
            android:id="@+id/textViewOrange"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewRed"
            android:layout_alignStart="@+id/textViewRed"
            android:background="#ff5500"
            android:padding="8dp"
            android:layout_alignLeft="@+id/textViewRed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amarillo"
            android:id="@+id/textViewYellow"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewOrange"
            android:layout_alignStart="@+id/textViewOrange"
            android:background="#fffb00"
            android:padding="8dp"
            android:layout_alignLeft="@+id/textViewOrange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verde"
            android:id="@+id/textViewGreen"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewYellow"
            android:layout_alignStart="@+id/textViewYellow"
            android:background="#0dff00"
            android:padding="8dp"
            android:layout_alignLeft="@+id/textViewYellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Azul"
            android:id="@+id/textViewBlue"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewGreen"
            android:layout_alignStart="@+id/textViewGreen"
            android:background="#0062ff"
            android:padding="8dp"
            android:layout_alignLeft="@+id/textViewGreen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Violeta"
            android:id="@+id/textViewVioleta"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewIndigo"
            android:layout_alignLeft="@+id/textViewGreen"
            android:background="#9000ff"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indigo"
            android:id="@+id/textViewIndigo"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textViewBlue"
            android:layout_alignLeft="@+id/textViewGreen"
            android:background="#5900ff"
            android:padding="8dp"/>
    </RelativeLayout>
</RelativeLayout>

